{
  "name": "pelican-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:server": "tsc -b src/server/tsconfig.json",
    "build:client": "concurrently --names tsc,vite \"tsc -b src/client/tsconfig.json\" \"vite build src/client\"",
    "build": "yarn build:server && yarn build:client",
    "start": "node ./build/server/bin/www.js",
    "watch:server": "nodemon --ext ts,tsx --watch src/server --exec \"ts-node src/server/bin/www.ts\"",
    "watch:client": "concurrently --names tsc,vite \"tsc -b -w --preserveWatchOutput src/client/tsconfig.json\" \"vite --clearScreen false src/client\"",
    "watch": "concurrently --names server,client \"yarn watch:server\" \"yarn watch:client\"",
    "lint:client": "eslint -c src/client/.eslintrc.js src/client",
    "lint:server": "eslint -c src/server/.eslintrc.js src/server",
    "lint": "yarn lint:server && yarn lint:client"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitejs/plugin-react": "^1.1.4",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
