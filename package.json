{
  "name": "pelican-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:server": "tsc -b src/server/tsconfig.json",
    "build:client:tsc": "tsc -b src/client/tsconfig.json",
    "build:client:copyfiles": "copyfiles -u 2 \"src/client/**/*.css\" build/client",
    "build:client:webpack": "webpack -c src/client/webpack.config.js",
    "build:client": "yarn build:client:tsc && yarn build:client:copyfiles && yarn build:client:webpack",
    "build": "yarn build:server && yarn build:client",
    "start": "node ./build/server/bin/www.js",
    "watch:client:tsc": "nodemon --ext ts,tsx --watch src/client --exec \"yarn build:client:tsc\"",
    "watch:client:copyfiles": "nodemon --ext css --watch src/client --exec \"yarn build:client:copyfiles\"",
    "watch:client:webpack": "webpack serve -c src/client/webpack.dev.js",
    "watch:client": "concurrently --names tsc,copyfiles,webpack \"yarn watch:client:tsc\" \"yarn watch:client:copyfiles\" \"yarn watch:client:webpack\""
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.3",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.5.1",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "express": "^4.17.2"
  }
}
